<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cubes.logic.mihe.PersonActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/user_image_person"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:visibility="visible"
                    app:srcCompat="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/name_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This person"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/handle_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="/@random"
                    android:textAlignment="center"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/specialisation_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:text="Cool hackerman"
                    android:textAlignment="center"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/location_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:text="Chennai, India"
                    android:textAlignment="center"
                    android:textStyle="italic" />

                <LinearLayout
                    android:layout_width="wrap_content"

                    android:layout_height="68dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_card"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="9dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="9dp">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/web_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_margin="8dp"
                        android:visibility="visible"
                        app:srcCompat="@drawable/ic_internet" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/mail_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_margin="8dp"
                        android:visibility="visible"
                        app:srcCompat="@drawable/email" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/linked_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_margin="8dp"
                        android:visibility="visible"
                        app:srcCompat="@drawable/linked_in" />


                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/github_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_margin="8dp"
                        android:visibility="visible"
                        app:srcCompat="@drawable/github" />


                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/skills_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_card"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/ideas_person_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Ideas"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:visibility="visible" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/ideas_person_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_card"
                android:orientation="vertical"
                android:padding="12dp">


                <TextView
                    android:id="@+id/products_person_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Products"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:visibility="visible" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/products_person_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>