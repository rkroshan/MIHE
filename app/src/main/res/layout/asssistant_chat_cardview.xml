<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/chat_background_unfocused"
    android:orientation="vertical"
    android:padding="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:padding="2dp">

        <ImageView
            android:id="@+id/chat_imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chat_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                android:padding="8dp"
                android:text="Do you need a team ?"
                android:textColor="#000"
                android:textSize="20sp" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/chat_reload"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_refresh_white_24dp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/chat_option_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="6dp"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/chat_yes_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:background="@drawable/background_with_shadow"
            android:padding="8dp"
            android:textColor="#000"
            android:text="YES" />

        <Button
            android:id="@+id/chat_no_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/background_with_shadow"
            android:padding="8dp"
            android:text="NO" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/chat_extra_option_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/chat_extra_button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@drawable/background_with_shadow"
            android:padding="8dp"
            android:text="A" />

        <Button
            android:id="@+id/chat_extra_button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/background_with_shadow"
            android:padding="8dp"
            android:text="A" />

        <Button
            android:id="@+id/chat_extra_button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/background_with_shadow"
            android:padding="8dp"
            android:text="A" />

        <Button
            android:id="@+id/chat_extra_button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/background_with_shadow"
            android:padding="8dp"
            android:text="A" />


    </LinearLayout>

</LinearLayout>